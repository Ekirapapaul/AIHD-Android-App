<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_border"
        app:cardCornerRadius="5dp"
        card_view:cardElevation="9dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <customfonts.TextView_Roboto_Bold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="Diabetes Clinical Follow Up Form"
                        android:gravity="center"
                        android:background="@color/background_inner"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <customfonts.TextView_Roboto_Bold
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="Treatment Supporter's Details"
                        android:background="@color/background_header"
                        android:gravity="center">

                    </customfonts.TextView_Roboto_Bold>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:orientation="vertical">

                        <customfonts.TextView_Roboto_Bold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="DOPC/MOPC No: *">
                        </customfonts.TextView_Roboto_Bold>

                        <customfonts.EditText_Roboto_Regular
                            android:id="@+id/mopc_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="1"
                            android:inputType="text"
                            android:text="88556"
                            android:textSize="13sp" />

                        <customfonts.TextView_Roboto_Bold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Treatment supporter's name:">
                        </customfonts.TextView_Roboto_Bold>

                        <customfonts.EditText_Roboto_Regular
                            android:id="@+id/supporter_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="1"
                            android:inputType="textPersonName"
                            android:textSize="13sp" />

                        <customfonts.TextView_Roboto_Bold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Treatment Supporter's Cell phone Number:">
                        </customfonts.TextView_Roboto_Bold>

                        <customfonts.EditText_Roboto_Regular
                            android:id="@+id/supporter_telephone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <customfonts.TextView_Roboto_Bold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_header"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="Status of patient:"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:weightSum="3">

                        <customfonts.TextView_Roboto_Bold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="DM Diagnosis">
                        </customfonts.TextView_Roboto_Bold>

                        <customfonts.TextView_Roboto_Bold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Date of DM Diagnosis">
                        </customfonts.TextView_Roboto_Bold>

                        <customfonts.TextView_Roboto_Bold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Date of starting clinic">
                        </customfonts.TextView_Roboto_Bold>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio_diagnosis_new"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="onRadioButtonClicked"
                                android:text="New DM Patient"
                                android:textSize="13sp"/>

                            <RadioButton
                                android:id="@+id/radio_diagnosis_known"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="onRadioButtonClicked"
                                android:text="Known DM Patient"
                                android:textSize="13sp"/>
                        </RadioGroup>

                        <customfonts.EditText_Roboto_Regular
                            android:id="@+id/dm_diagnosis_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="date"
                            android:textSize="13sp"
                            android:hint="(dd/mm/yyyy)" />

                        <customfonts.EditText_Roboto_Regular
                            android:id="@+id/dm_clinic_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="date"
                            android:textSize="13sp"
                            android:hint="(dd/mm/yyyy)" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:weightSum="3">

                        <customfonts.TextView_Roboto_Bold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Hypertension:">
                        </customfonts.TextView_Roboto_Bold>

                        <customfonts.TextView_Roboto_Bold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Date of HTN Diagnosis">
                        </customfonts.TextView_Roboto_Bold>

                        <customfonts.TextView_Roboto_Bold
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Date of starting clinic"
                            >
                        </customfonts.TextView_Roboto_Bold>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radio_hypertension_new"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="onRadioButtonClicked"
                                android:text="New HTN patient"
                                android:textSize="13sp"/>

                            <RadioButton
                                android:id="@+id/radio_hypertension_known"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="onRadioButtonClicked"
                                android:text="Known HTN patient"
                                android:textSize="13sp"/>
                        </RadioGroup>

                        <customfonts.EditText_Roboto_Regular
                            android:id="@+id/htn_diagnosis_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="date"
                            android:textSize="13sp"
                            android:hint="(dd/mm/yyyy)" />

                        <customfonts.EditText_Roboto_Regular
                            android:id="@+id/htn_clinic_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="date"
                            android:textSize="13sp"
                            android:hint="(dd/mm/yyyy)" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:orientation="vertical">

                        <customfonts.TextView_Roboto_Bold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Patient covered by NHIF:"/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RadioButton
                                android:id="@+id/radio_NHIF_yes"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:onClick="onRadioButtonClicked"
                                android:text="Yes"
                                android:textSize="13sp"/>

                            <RadioButton
                                android:id="@+id/radio_NHIF_no"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:onClick="onRadioButtonClicked"
                                android:text="No"
                                android:textSize="13sp"/>
                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <customfonts.TextView_Roboto_Bold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:text="Type of Diabetes:"/>

                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <RadioButton
                                        android:id="@+id/radio_diabetes_type_1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:onClick="onRadioButtonClicked"
                                        android:text="Type 1"
                                        android:textSize="13sp"/>

                                    <RadioButton
                                        android:id="@+id/radio_diabetes_GDM"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:onClick="onRadioButtonClicked"
                                        android:text="GDM"
                                        android:textSize="13sp"/>

                                    <RadioButton
                                        android:id="@+id/radio_diabetes_type_2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:onClick="onRadioButtonClicked"
                                        android:text="Type 2"
                                        android:textSize="13sp"/>
                                </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <customfonts.TextView_Roboto_Bold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:text="HIV status:"
                                />

                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <RadioButton
                                        android:id="@+id/radio_HIV_negative"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:onClick="onRadioButtonClicked"
                                        android:text="HIV -ve"
                                        android:textSize="13sp"/>

                                    <RadioButton
                                        android:id="@+id/radio_HIV_positive"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:onClick="onRadioButtonClicked"
                                        android:text="HIV +ve"
                                        android:textSize="13sp"/>

                                    <RadioButton
                                        android:id="@+id/radio_HIV_unknown"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:onClick="onRadioButtonClicked"
                                        android:text="Unknown"
                                        android:textSize="13sp" />
                                </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
