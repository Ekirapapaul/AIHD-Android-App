                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                            <RadioGroup android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="10dp" android:orientation="horizontal">

                                <RadioButton android:id="@+id/radio_diagnosis_stroke_resolved" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="onRadioButtonClicked" android:text="Resolved"/>

                                <RadioButton android:id="@+id/radio_diagnosis_stroke_referral" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="onRadioButtonClicked" android:text="Referral"/>

